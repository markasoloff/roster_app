              </svg>

              <ul>Older Votes: <span id=""><%= engineer.vote %></span></ul>
                <text id="newVotes"> </text>
                  <hr>
                <% end %>

      </div>
    </div>

<script>
    var button = document.getElementById('icon-thumbs-up');
    var newVotes = document.getElementById('newVotes');
    var count = 0
      button.addEventListener('click', event => {
      count++
      newVotes.innerHTML = count + ' new votes today!';
      console.log(count);
    });
</script>

